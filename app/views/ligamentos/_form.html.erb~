<%= form_for(@ligamento, :url => { :controller => "ligamentos"}) do |f| %>
  <% if @ligamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ligamento.errors.count, "error") %> prohibited this ligamento from being saved:</h2>

      <ul>
      <% @ligamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input type="hidden" id="id" name="id" value="<%= @ligamento.try(:id) %>" />

<div style="width:50%">
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Descrição</h3>
  </div>
  <div class="panel-body">
	  <div class="form-group">
	    <%= f.label :tipo %> *
	    <%= f.text_field :tipo, :class=>"form-control input-sm" %>
	  </div>
  </div>
</div>
</div>
  <div class="actions">
    <%= f.submit :class=>"btn btn-primary", :value=>"Inserir" %>
  </div>
<% end %>
