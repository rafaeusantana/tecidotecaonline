<h1>Lista de Faixas Etárias</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Tipo de Faixa Etária</th>
    </tr>
  </thead>

  <tbody>
    <% @faixa_etarias.each do |faixa_etaria| %>
      <tr>
        <td><%= faixa_etaria.nome %></td>
        <td><%= link_to 'Mostrar', faixa_etaria_path(faixa_etaria) %></td>
        <td><%= link_to 'Editar', edit_faixa_etaria_path(faixa_etaria) %></td>
        <td><%= link_to 'Excluir', faixa_etaria_path(faixa_etaria), method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar faixa etária', new_faixa_etaria_path %>
