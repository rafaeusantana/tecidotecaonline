<h1>Lista de Tipos de Bandeira</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Tipo de Bandeira</th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_bandeiras.each do |tipo_bandeira| %>
      <tr>
        <td><%= tipo_bandeira.tipo %></td>
        <td><%= link_to 'Mostrar', tipo_bandeira_path(tipo_bandeira) %></td>
        <td><%= link_to 'Editar', edit_tipo_bandeira_path(tipo_bandeira) %></td>
        <td><%= link_to 'Excluir', tipo_bandeira_path(tipo_bandeira), method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

