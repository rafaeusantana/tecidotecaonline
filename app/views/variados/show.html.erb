<h1>Item Variado</h1>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Descrição</h3>
  </div>
  <div class="panel-body">
	<p>
	  <strong>Suporte:</strong>
	  <%= @variado.suporte.nome %>
	</p>
	<p>
	  <strong>Tipo de Item:</strong>
	  <%= ItemVariado.find(@variado.tipo_item_variado_id).tipo %>
	</p>
	<p>
	  <strong>Localização:</strong>
	  <%= @variado.localizacao %>
	</p>
	<p>
	  <strong>Tipo de Aquisição:</strong>
	  <%= @variado.tipo_aquisicao %>
	</p>
	<p>
	  <strong>Data da Aquisição:</strong>
	  <%= @variado.data_aquisicao %>
	</p>
	<p>
	  <strong>Fornecedor da Aquisição:</strong>
	  <%= @variado.fornecedor_aquisicao %>
	</p>
  </div>
</div>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Especificações Técnicas</h3>
  </div>
  <div class="panel-body">
	<p>
	  <strong>Tamanho:</strong>
	  <%= Tamanho.find(@variado.tamanho_id).nome %>
	</p>
	<p>
	  <strong>Tipos de Materiais:</strong>
	  <% @variado.tipo_materials.each do |i| %>
	  <%= i.nome %>
	  <% end %>
	</p>
	<p>
	  <strong>Matérias Primas:</strong>
	  <% @variado.materia_primas.each do |i| %>
	  <%= i.nome %>
	  <% end %>
	</p>
	<p>
	  <strong>Ligamentos:</strong>
	  <% @variado.ligamentos.each do |i| %>
	  <%= i.tipo %>
	  <% end %>
	</p>
	<p>
	  <strong>Gramatura:</strong>
	  <%= @variado.gramatura %>
	</p>
	<p>
	  <strong>Número de trama:</strong>
	  <%= @variado.numero_trama %>
	</p>
	<p>
	  <strong>Número de urdume:</strong>
	  <%= @variado.numero_urdume %>
	</p>
	<p>
	  <strong>Análise de fio-título:</strong>
	  <% @variado.fio_titulos.each do |i| %>
	  <%= i.tipo %>
	  <% end %>
	</p>
  </div>
</div>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Informações Adicionais</h3>
  </div>
  <div class="panel-body">
	<p>
	  <strong>Fabricante:</strong>
	  <%= @variado.fabricante.nome %><br \>
	  <strong>Cidade:</strong>
	  <%= @variado.fabricante.cidade %><br \>
	  <strong>Estado:</strong>
	  <%= @variado.fabricante.estado %><br \>
	  <strong>País:</strong>
	  <%= @variado.fabricante.pais %><br \>
	  <strong>Endereço:</strong>
	  <%= @variado.fabricante.endereco %><br \>
	  <strong>Site:</strong>
	  <%= @variado.fabricante.site %><br \>
	  <strong>E-mail:</strong>
	  <%= @variado.fabricante.email %><br \>
	</p>
	<p>
	  <strong>Coleção:</strong>
	  <%= @variado.colecao.nome %>
	</p>
	<p>
	  <strong>Ano da Coleção:</strong>
	  <%= @variado.ano_colecao %>
	</p>
	<p>
	  <strong>Especificações:</strong>
	  <%= @variado.especificacoes %>
	</p>
	<p>
	  <strong>Faixa Etária:</strong>
	  <%= @variado.faixa_etaria.nome %><br \>
	</p>
	<p>
	  <strong>Peça Vestuário:</strong>
	  <%= @variado.peca_vestuario %>
	</p>
	<p>
	  <strong>Padronagem Design:</strong>
	  <% @variado.padronagem_designs.each do |i| %>
	  <%= i.tipo %>
	  <% end %>
	</p>
	<p>
	  <strong>Usos do tecido:</strong>
	  <% @variado.uso_tecidos.each do |i| %>
	  <%= i.tipo %>
	  <% end %>
	</p>
	<p>
	  <strong>Cor predominante:</strong>
	  <%= @variado.cor.nome %>
	</p>
	<p>
	  <strong>Cores adicionais:</strong>
	  <% @variado.cor_adicionals.each do |i| %>
	  <%= i.nome %> 
	  <% end %>
	</p>
	<p>
	  <strong>Técnicas de Design:</strong>
	  <% @variado.tecnica_designs.each do |i| %>
	  <%= i.nome %>
	  <% end %>
	</p>
	<p>
	  <strong>Acabamento:</strong>
	  <%= @variado.acabamento.tipo %>
	</p>
	<p>
	  <strong>Textura:</strong>
	  <%= @variado.textura.tipo %>
	</p>
	<p>
	  <strong>Análise de Cor:</strong>
	  <%= @variado.analise_cor %>
	</p>
  </div>
</div>

<%= link_to 'Editar', edit_variado_path(@variado) %> |
<%= link_to 'Voltar', variados_path %>
