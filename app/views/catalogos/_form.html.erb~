<%= form_for(@catalogo) do |f| %>
  <% if @catalogo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@catalogo.errors.count, "error") %> prohibited this catalogo from being saved:</h2>

      <ul>
      <% @catalogo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="label{width:500px}">
    <%= f.label :suporte_id %>
    <%= f.select :suporte_id, Suporte.all.map{|c| [c.nome, c.id]} %>
  </div>
  <div class="field">
    <%= f.label :localizacao %>
    <%= f.text_field :localizacao %> *
  </div>
  <div class="field">
    <%= f.label :nome_aquisicao %>
    <%= f.text_field :nome_aquisicao %>
  </div>
  <div class="field">
    <%= f.label :data_aquisicao %>
    <%= f.text_field :data_aquisicao %>
  </div>
  <div class="field">
    <%= f.label :fibra_tecido %>
    <%= f.text_field :fibra_tecido %>
  </div>
  <div class="field">
    <%= f.label :codificacao_internacional_tecido %>
    <%= f.text_field :codificacao_internacional_tecido %>
  </div>
  <div class="field">
    <%= f.label :fabricante_id %>
    <%= f.select :fabricante_id, Fabricante.all.map{|c| [c.nome, c.id]} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
